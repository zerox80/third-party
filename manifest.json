{
  "manifest_version": 3,
  "name": "Third-Party Cookie Blocker",
  "description": "Blockiert standardmäßig alle Drittanbieter-Cookies und bietet eine Whitelist für vertrauenswürdige Domains.",
  "version": "1.1",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "tabs"
  ],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_title": "Cookie-Blocker",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
